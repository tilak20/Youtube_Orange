<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@drawable/tv_line_shape"
        android:orientation="horizontal"
        android:padding="@dimen/_12sdp">

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_gravity="center"
            android:elevation="@dimen/_2sdp"
            android:src="@drawable/round_checked"
            app:round="@dimen/_100sdp" />

        <TextView
            android:id="@+id/qulity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="HD"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <RelativeLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ed_shape"
            android:backgroundTint="#EDEDED"
            android:gravity="center"
            android:padding="@dimen/_4sdp">

            <ProgressBar
                android:id="@+id/progrssbar"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:indeterminateTint="#3A87FD"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/firstsize"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text=""
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
