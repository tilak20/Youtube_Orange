<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_minus24sdp"
        android:background="@drawable/bg_bottom_dialog"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="@dimen/_2sdp"
        android:orientation="vertical"
        android:paddingStart="@dimen/_14sdp"
        android:paddingTop="@dimen/_14sdp"
        android:paddingEnd="@dimen/_14sdp"
        android:paddingBottom="@dimen/_50sdp">

        <View
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:backgroundTint="#FF3E3E" />

        <TextView
            android:id="@+id/tvdetect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="start"
            android:padding="@dimen/_8sdp"
            android:text="Video not detected?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/oone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start"
            android:text="Option 1 : Play the video first"
            android:textColor="#8A8A8A"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="start"
            android:text="Option 2 : Refresh the web page to retry"
            android:textColor="#8A8A8A"
            android:textSize="@dimen/_10sdp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/ndetect"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:background="#DEDEDE"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/videobtn"
                app:round="@dimen/_20sdp" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="0dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:scaleX="-1"
                android:src="@drawable/back_arrow"
                android:tint="@color/black" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/detected"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:background="#FF3E3E"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/videobtn"
                app:round="@dimen/_20sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/tv_bg"
            android:backgroundTint="#FF3E3E"
            android:elevation="@dimen/_2sdp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</RelativeLayout>